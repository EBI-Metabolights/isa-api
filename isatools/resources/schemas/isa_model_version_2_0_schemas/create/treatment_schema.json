{
    "$schema": "http://json-schema.org/draft-04/schema-extension",
    "title": "ISA treatment schema",
    "description": "JSON-schema representing a treatment in the ISA model v2.0",
    "type": "object",
    "properties": {
        "name" : {
            "type" : "string"
        },
        "treatmentType" : {
            "enum": [ "chemical agent based treatment", "biological agent based treatment", "physical agent based treatment", "behavorial agent based treatment"]
        },
        "isConcomitant" : {
               "type" : "boolean"
        },
        "identifierInfo": {
            "type": "array",
            "items": {
                "$ref": "identifier_info_schema.json#"
            }
        },
        "factorValues" : {
            "type" : "array",
            "items" :  {
                "$ref": "factor_schema.json#"
            }
        }
    }
}


