{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Study JSON Schema",
    "description": "JSON Schema describing an Study",
    "@context": {
        "@base": "http://purl.org/isaterms/",
        "xsd": "http://www.w3.org/2001/XMLSchema#"
    },
    "commonDefinitions" : {"$ref":"url://assay_definitions_schema.json"},
    "type": "object",
    "properties": {
        "identifier" : { "type" : "string" },
        "title" : { "type" : "string"},
        "description" : { "type" : "string"},
        "submissionDate" : { "type" : "string", "format" : "date-time"},
        "publicReleaseDate" : { "type" : "string", "format" : "date-time"},
        "createdWithConfiguration" : { "type": "string"},
        "lastOpenedWithConfiguration" : { "type" : "string" },
        "publications" : {
            "type" : "array",
            "items" : {
                 "$ref": "publication_schema.json#"

            }
        },
        "people" : {
            "type" : "array",
            "items" : {
                 "$ref": "person_schema.json#"

            }
        },
        "studyDesignDescriptors":{
              "type": "array",
              "items" : {
                "$ref": "ontology_reference_schema.json#"
              }
        },
        "studySampleTable": {
              "type": "object",
                "$ref": "study_sample_table_schema.json#"
        },
        "protocols" : {
              "type": "array",
              "items" : {
                "$ref": "protocol_schema.json#"
              }
        },
        "assays" : {
              "type": "array",
              "items" : {
                "$ref": "assay_schema.json#"
              }
        }
    }
}