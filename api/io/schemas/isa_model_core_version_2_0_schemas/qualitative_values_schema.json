{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title" : "ISA treatment schema",
    "description" : "JSON-schema representing a treatment (aka an intervention or a perturbation) in the ISA model v2.0.",
    "type": "object",
    "properties" : {
        "name": {
            "type": "string"
        },
        "treatment_type" : {
             "type" : "string"
        },
        "isConcomimant" : {
          "type": "boolean"
        },
        "isSequential" : {
          "type": "boolean"
        },
        "annotation": {
            "type": "array",
            "items": {
                "$ref": "factor_schema.json#"
            }
        }
    }
}