{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "ISA Assay JSON Schema",
    "description": "JSON Schema describing an ISA Assay",
    "@context": {
        "@base": "http://purl.org/isaterms/",
        "xsd": "http://www.w3.org/2001/XMLSchema#"
    },
    "definitions": {
        "RangeType": {
            "enum": [
                "less-than",
                "less-equal-than",
                "greater-than",
                "greater-equal-than",
                "between"
            ]
        },
        "FieldType": {
            "properties": {
                "header": {
                    "type": "string"
                },
                "data-type": {
                    "type": "string"
                },
                "section": {
                    "type": "string"
                },
                "is-hidden": {
                    "type": "boolean"
                },
                "is-file-field": {
                    "type": "boolean"
                },
                "is-multiple-value": {
                    "type": "boolean"
                },
                "is-required": {
                    "type": "boolean"
                },
                "is-forced-ontology": {
                    "type": "boolean"
                },
                "description": {
                    "type": "string"
                },
                "default-value": {
                    "type": "string"
                },
                "value-format": {
                    "type": "string"
                },
                "list-values": {
                    "type": "string"
                },
                "generated-value-template": {
                    "type": "string"
                },
                "value-range": {
                    "$ref": "#/definitions/cfg:ValueRangeType"
                }
            },
            "ValueRangeType": {
                "properties": {
                    "type": {
                        "$ref": "#/definitions/cfg:RangeType"
                    },
                    "min": {
                        "type": "string"
                    },
                    "max": {
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    }
}