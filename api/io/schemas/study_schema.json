{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Study JSON Schema",
    "description": "JSON Schema describing an Study table",
    "@context": {
        "@base": "http://purl.org/isaterms/",
        "xsd": "http://www.w3.org/2001/XMLSchema#"
    },
    "definitions": {
        "isaNode": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "index": {
                    "type": "integer"
                }
            }
        },
        "isaMaterialAttribute": {
            "allOf": [
                {
                    "$ref": "#/definitions/isaNode"
                },
                {
                    "namePattern": "(Characteristics.*)"
                }
            ]
        },
        "isaMaterialNode": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/isaNode"
                },
                {
                    "properties": {
                        "namePattern": "(Source.*)|(Sample.*)|(Extract.*)|(Labeled Extract.*)",
                        "attributes": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/isaMaterialAttribute"
                            }
                        }
                    }
                }
            ]
        },
        "isaProcessNode": {
            "allOf": [
                {
                    "$ref": "#/definitions/isaNode"
                },
                {
                    "namePattern": "(.*Assay Name)|(Normalization.*)|(Data Transformation.*)"
                }
            ]
        },
        "isaProtocolExecutionNode": {
            "allOf": [
                {
                    "$ref": "#/definitions/isaNode"
                },
                {
                    "namePattern": "((?i)Protocol REF)"
                }
            ]
        }
    },
    "type": "object",
    "properties": {
        "studySampleTable": {
            "studyTableHeaders": {
                "type": "array",
                "items": {
                    "source": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/isaMaterialNode"
                            },
                            {
                                "namePattern": "(Source.*)"
                            }
                        ]
                    },
                    "sample": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/isaMaterialNode"
                            },
                            {
                                "namePattern": "(Sample.*)"
                            }
                        ]
                    }

                }
            },
            "studyTableData": {
                "type" : "array"
            }
        }
    }
}