                    "type": "string"
                },
                "studyPublicReleaseDate": {
                    "type": "string"
                },
                "studyFileName": {
                    "type": "string"
                }

            }
        },
        "studyDesignDescriptorsSection": {
            "type": "array",
            "items": {
                "studyDesignType": {
                    "type": "string"
                },
                "studyDesignTypeTermAccessionNumber": {
                    "type": "@id"
                },
                "studyDesignTypeTermSourceREF": {
                    "type": "string"
                }
            }
        }
    },
    "studyPublicationsSection": {
        "type": "array",
        "items": {
            "studyPubMedID": {
                "type": "string"
